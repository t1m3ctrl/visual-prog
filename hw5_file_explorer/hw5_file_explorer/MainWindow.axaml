<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
		xmlns:local="clr-namespace:hw5_file_explorer"
        x:Class="hw5_file_explorer.MainWindow"
        x:DataType="local:DataContextMainWindow"
		Title="File Explorer"
	    Width="800" Height="600">

	<Window.DataContext>
		<local:DataContextMainWindow/>
	</Window.DataContext>

	<Design.DataContext>
		<local:DataContextMainWindow/>
	</Design.DataContext>

	<Grid ColumnDefinitions="1.3*,2.5*">
		<ScrollViewer>
			<StackPanel Grid.Column="0">
				<TextBlock Text="{Binding CurrentDirectory}" FontSize="18" Margin="10"/>
				<ListBox ItemsSource="{Binding Collection}" DoubleTapped="DoubleTappedCommand" Tapped="TappedCommand">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Grid ColumnDefinitions="0.2*, *" ToolTip.Tip="{Binding Path}">
								<Image Grid.Column="0" Width="40" Height="40" Margin="0,0,10,0" Source="{Binding IconPath}" Stretch="Uniform"/>
								<TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"/>
							</Grid>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</StackPanel>
		</ScrollViewer>
		<Image Grid.Column="1" Source="{Binding Image}"/>
	</Grid>


</Window>
