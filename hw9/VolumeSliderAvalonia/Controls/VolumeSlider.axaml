<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:VolumeSliderAvalonia">
  <Design.PreviewWith>
    <controls:VolumeSlider />
  </Design.PreviewWith>

  <Style Selector="controls|VolumeSlider">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <StackPanel Margin="20">
			  <TextBlock IsVisible="{TemplateBinding IsSliderVisible}" Text="{Binding #slider.Value}"
						  HorizontalAlignment="Center"/>
			  
			  <Grid IsVisible="{TemplateBinding IsSliderVisible}" ColumnDefinitions="*,Auto">
				  <Slider x:Name="slider" />
				  <Button Command="{Binding CloseButtonCommand, RelativeSource={RelativeSource TemplatedParent}}" 
						  Margin="10,0,0,0" Grid.Column="1" CornerRadius="10">Close</Button>
			  </Grid>

			  <Button Command="{Binding OpenSliderCommand, RelativeSource={RelativeSource TemplatedParent}}" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="{Binding !IsSliderVisible, RelativeSource={RelativeSource TemplatedParent}}" 
					  Background="LightBlue" Height="100" Width="100">
					  <TextBlock Text="Tap Me" Margin="15,32,10,10"/>
			  </Button>
		  </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
